{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["es6"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "include": [
    "./src",
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
